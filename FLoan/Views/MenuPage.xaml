        <Grid.RowDefinitions>
            <RowDefinition Height="70">
            </RowDefinition>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" BackgroundColor="Red">
            <Label Text="Profile pic">
            </Label>
        </StackLayout>
        <StackLayout Grid.Row="1" BackgroundColor="Green">
