                <Button BorderRadius="25"  Margin="20,10,20,5" HeightRequest="50" Text="How it works" Clicked="HowItWorkedButton_Clicked" BackgroundColor="{StaticResource PinkColor}" TextColor="White" FontSize="Medium" />
                
            </StackLayout>
        </Grid>
        
    
    </ContentPage.Content>
</ContentPage>
    
