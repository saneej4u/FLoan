<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FLoan.Views.LoginPage" BackgroundColor="{StaticResource MonzaColor}">
     <ContentPage.Padding>
                  <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS, Android" Value="0,10,0,0" />
                  </OnPlatform>
                </ContentPage.Padding>
    
    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Row="0" Grid.ColumnSpan="3">
                <Image Source="icons8-multiply-filled-50.png" Margin="0,40,0,0" HorizontalOptions="End" VerticalOptions="Start" >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="CloseSignBtnRecognizer_Tapped"
                            NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
            <StackLayout Grid.Row="1" Grid.ColumnSpan="3" VerticalOptions="FillAndExpand">
                <StackLayout>
                    <Image Source="sign-in-icon.png" Aspect="AspectFit"></Image>
                </StackLayout>
                <StackLayout Margin="20" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">

                    <Entry Placeholder="Email Address" Keyboard="Email" HeightRequest="50"></Entry>
                    <Entry IsPassword="True" Placeholder="Password" HeightRequest="50"></Entry>
                    <Button Text="Sign In"  BackgroundColor="#ea3362" TextColor="White" Clicked="LogInButton_Clicked" ></Button>
                </StackLayout>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>